@model List<User>

@{ ViewData["Title"] = "Index"; }

<h3 class="text-center">User Role Management</h3>
<hr />

<div class="container">
    @await Html.PartialAsync("_TopMenuPartial")

    <div class="row">
        <div class="col-12">
            @if (Model.Count == 0)
            {
                <p> Kullanıcı Bulunmamakta</p>
            }
            else
            {
                <table class="table">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th>UserName</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserName</td>
                                <td>
                                    <a class="btn btn-success" asp-route-userId="@user.Id" asp-action="Details"> View Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>