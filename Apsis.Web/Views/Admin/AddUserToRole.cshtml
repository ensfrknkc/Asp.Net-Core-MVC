@{
    Layout = "_AdminLayout";
}
@model UserRole

@{ ViewData["Title"] = "AddUserToRole"; }

<h3 class="text-center">Rol Atama</h3>
<hr /> <br />


<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <form asp-action="AddUserToRole" method="post">
                <div class="form-group">
                    <label>Kullanıcı</label>
                    <select asp-for="UserId" asp-items="@ViewBag.Users" class="form-control">
                        <option selected disabled>--Kullanıcı Seçimi--</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Rol</label>
                    <select asp-for="RoleName" asp-items="@ViewBag.Roles" class="form-control">
                        <option selected disabled>--Rol Seçimi</option>
                    </select>
                </div>

                <input type="submit" class="btn btn-outline-primary btn-block" value="Ata" />
                <a asp-action="Index" class="btn btn-outline-danger btn-block">Vazgeç</a>
            </form>
        </div>
    </div>
</div>