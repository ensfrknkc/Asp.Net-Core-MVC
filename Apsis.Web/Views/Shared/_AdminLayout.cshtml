<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewData["Title"]-Admin</title>

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-action="Index" asp-controller="Admin">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-laugh-wink"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Apsis Admin</div>
            </a>
            <hr class="sidebar-divider">
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Home">
                    <i class="fas fa-eye"></i>
                    <span>Site Görünümü</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Admin İşlemleri
            </div>
            <li class="nav-item">
                <a class="nav-link" asp-action="Index" asp-controller="Admin">
                    <i class="fas fa-user-edit"></i>
                    <span>Kullanıcı Güncelle</span>
                </a>
            </li>
            <!-- Nav Item - Charts -->
            <li class="nav-item">
                <a class="nav-link" asp-action="AddUser" asp-controller="Auth">
                    <i class="fas fa-user-plus"></i>
                    <span>Kullanıcı Ekle</span>
                </a>
            </li>

            <!-- Nav Item - Tables -->
            <li class="nav-item">
                <a class="nav-link" asp-action="AddBlock" asp-controller="Flat">
                    <i class="fas fa-plus-circle"></i>
                    <span>Blok Ekle</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-action="AddFlat" asp-controller="Flat">
                    <i class="fas fa-building"></i>
                    <span>Daire Ekle</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="AddBill" asp-controller="Bill">
                    <i class="fas fa-plus-square"></i>
                    <span>Fatura Ekle</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="SubscriptionAdd" asp-controller="Subscription">
                    <i class="fas fa-plus-square"></i>
                    <span>Aidat Ekle</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="DebtList" asp-controller="Debt">
                    <i class="fas fa-wallet"></i>
                    <span>Alacak Listesi</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="PaidDebtList" asp-controller="Debt">
                    <i class="fas fa-money-check-alt"></i>
                    <span>Ödenmişler Listesi</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="Messages" asp-controller="Message">
                    <i class="fas fa-envelope-square"></i>
                    <span>Mesajlar</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="DisplayRoles" asp-controller="Admin">
                    <i class="fas fa-tags"></i>
                    <span>Rol Ekle</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="AddUserToRole" asp-controller="Admin">
                    <i class="fas fa-user-tag"></i>
                    <span>Üye Rol Ata</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">
                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
                    <partial name="_LogoutPartial" />
                </nav>


                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <div class="container">
                        @RenderBody()
                    </div>
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; by Enes Furkan KOÇ</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>